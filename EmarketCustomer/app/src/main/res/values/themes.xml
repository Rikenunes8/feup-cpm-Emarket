<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmarketCustomer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="titleTextColor">@color/green</item>
        <item name="subtitleTextColor">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/dark_gray</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackground">?attr/colorSecondaryVariant</item>
        <item name="android:colorAccent">?attr/colorPrimary</item>
        <item name="colorOnContainer">?attr/colorPrimary</item>

    </style>

    <style name="Theme.EmarketCustomer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EmarketCustomer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EmarketCustomer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>