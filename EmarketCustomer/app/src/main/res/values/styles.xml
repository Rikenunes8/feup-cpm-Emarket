<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/titleTextColor</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle1" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/titleTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="FormLabel" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FormEdit">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="android:tint">?colorAccent</item>
        <item name="android:paddingVertical">2.5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Button" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">?attr/titleTextColor</item>
        <item name="android:textColor">?attr/subtitleTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="CheckedCompatTheme" >
        <item name="colorControlActivated">?attr/titleTextColor</item>
    </style>

    <style name="DateTimeEdit">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:layout_marginVertical">1.5dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/green</item>
        <!--selected Item color-->
        <item name="colorControlActivated">@color/green</item>
        <!-- arrow bordercolor(<>)-->
        <item name="android:selectableItemBackgroundBorderless">?attr/colorSecondary</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">@color/light_green</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">?attr/colorSecondary</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">@color/gray</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">?attr/colorOnSecondary</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <!-- Ok Cancel Color-->
        <item name="android:buttonBarButtonStyle">@style/DialogTheme.Button</item>
    </style>

    <style name="DialogTheme.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/titleTextColor</item>
    </style>
</resources>