<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmarketCustomer" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/bright_green</item>
        <item name="titleTextColor">@color/bright_green</item>
        <item name="subtitleTextColor">@color/dark_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorControlActivated">@color/gray</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackground">?attr/colorSecondaryVariant</item>
        <item name="android:colorAccent">?attr/colorOnPrimary</item>
        <item name="colorOnContainer">?attr/colorPrimaryVariant</item>

        <item name="toolbarStyle">@style/MyToolbar</item>
    </style>

    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/bright_green</item>
    </style>
</resources>